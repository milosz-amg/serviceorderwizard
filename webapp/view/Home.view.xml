<mvc:View controllerName="com.mr.serviceorderwizard.controller.Home"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.f"
    xmlns:core="sap.ui.core"
    xmlns:grid="sap.ui.layout.cssgrid">
    <Page id="homePage" title="{i18n>title}">
        <content>
            <!-- Szersze kafelki z wyraźniejszymi ikonami -->
            <l:HorizontalLayout class="sapUiResponsiveMargin" allowWrapping="true">
                <!-- Kafelek "Zamów serwis" -->
                <f:Card width="48%" class="sapUiMediumMarginBottom sapUiMediumMarginEnd">
                    <f:content>
                        <FlexBox height="100%" alignItems="Center" justifyContent="Start" class="sapUiSmallMargin">
                            <HBox alignItems="Center" justifyContent="SpaceBetween" width="100%">
                                <VBox alignItems="Start" justifyContent="Center" class="sapUiSmallMarginEnd" width="70%">
                                    <Title text="{i18n>homeOrderTitle}" level="H2" class="sapUiTinyMarginBottom" />
                                    <Text text="{i18n>homeOrderDescription}" class="sapUiMediumMarginBottom" />
                                    <Button text="{i18n>homeOrderButton}" press="onNavToCreateOrder" type="Emphasized" icon="sap-icon://add" />
                                </VBox>
                                <core:Icon src="sap-icon://appointment-2" size="5rem" color="#0854a0" class="sapUiMediumMargin" />
                            </HBox>
                        </FlexBox>
                    </f:content>
                </f:Card>
                
                <!-- Kafelek "Moje zamówienia" -->
                <f:Card width="48%" class="sapUiMediumMarginBottom">
                    <f:content>
                        <FlexBox height="100%" alignItems="Center" justifyContent="Start" class="sapUiSmallMargin">
                            <HBox alignItems="Center" justifyContent="SpaceBetween" width="100%">
                                <VBox alignItems="Start" justifyContent="Center" class="sapUiSmallMarginEnd" width="70%">
                                    <Title text="{i18n>homeOrdersTitle}" level="H2" class="sapUiTinyMarginBottom" />
                                    <Text text="{i18n>homeOrdersDescription}" class="sapUiMediumMarginBottom" />
                                    <Button text="{i18n>homeOrdersButton}" press="onNavToOrders" type="Emphasized" icon="sap-icon://history" />
                                </VBox>
                                <core:Icon src="sap-icon://list" size="5rem" color="#0854a0" class="sapUiMediumMargin" />
                            </HBox>
                        </FlexBox>
                    </f:content>
                </f:Card>
            </l:HorizontalLayout>
        </content>
    </Page>
</mvc:View>